[colors]
background = #fa1e2137
foreground = #e3eaf3
primary = #02c084
secondary = #65a2d9
tertiary = #d07ef2
fourth = #e5c246
alert = #ed404c

[global/wm]
margin-bottom = 20

[bar/i3bar]
width = 100%:-19
height = 36
offset-x = 10
offset-y = 24

; don't use round corners; compositor handles that
radius = 0.0

; Put bar at top
bottom = false

; Don't use separators
separator =

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

; Don't put gaps betweeen borders and the bar
border-size = 0
border-color = #00000000

; A little padding of the tray icons is fine, but not on the workspace buttons
padding-left = 1
padding-right = 2
module-margin-left = 1
module-margin-right = 1

; note to future self; the number after ';' is vertical offset from the top
font-0 = Source Code Pro:style=Regular:size=15;2
font-1 = unifont:fontformat=truetype:size=20:antialias=true;0
font-2 = siji:pixelsize=20;0
font-3 = MesloLGS NF:style=Regular:size=16;2

modules-left = i3
modules-center =
modules-right = pulseaudio wlan battery date

; Ah, tray icons.
tray-position = right
tray-padding = 2
tray-maxsize = 16
tray-offset-x = -4

wm-restack = i3
override-redirect = true

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
label-separator = |

; Split workspace name on ':'
strip-wsnumbers = true

fuzzy-match = true

ws-icon-0 = web;%{F#ff6611}%{F-}
ws-icon-1 = discord;%{F#7289DA}ﭮ%{F-}
ws-icon-2 = dev;%{F#4ad453}%{F-}
ws-icon-3 = anki;%{F#4ec6d4}טּ%{F-}
ws-icon-4 = misc;%{F#c9a338}%{F-}
ws-icon-5 = games;%{F#ffffff}%{F-}
ws-icon-6 = spotify;%{F#1DB954}%{F-}
ws-icon-7 = reading;%{F#c5cc62}龎%{F-}
ws-icon-8 = notes;%{F#E0C9A6}%{F-}

; Disable mouse
enable-click = false
enable-scroll = false

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
